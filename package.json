{
  "name": "performance-tracker",
  "version": "1.0.0",
  "description": "A CAP project to track student and staff performance.",
  "repository": "<your-repository-url>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/sqlite": "^2.0.2",
    "@sap/cds": "^9.2.1",
    "express": "^4"
  },
  "devDependencies": {
    "@sap/cds-dk": "^9.2.1",
    "@sap/ux-ui5-tooling": "^1",
    "sqlite3": "latest",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-students": "cds watch --open students/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-teachers": "cds watch --open fioriui.teachers/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-classes": "cds watch --open classui.classes/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-attendancerecord": "cds watch --open attendancerecord.attendancerecord/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-exams": "cds watch --open exams.exams/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite"
      }
    },
    "ux": {
      "app": {
        "module": "sap-ui5"
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/students",
    "app/teachers",
    "app/classes",
    "app/attendancerecord",
    "app/exams"
  ]
}
